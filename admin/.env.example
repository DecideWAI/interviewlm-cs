# InterviewLM Admin Environment Variables
# Copy this file to .env and fill in the values

# Authentication
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/interviewlm

# Redis (for rate limiting, audit logs, security alerts)
REDIS_URL=redis://localhost:6379

# Main InterviewLM API (for experiment data)
INTERVIEWLM_API_URL=http://localhost:3000/api

# Optional: TOTP Secret for admin 2FA (generate per user)
# TOTP_SECRET=base32-encoded-secret
